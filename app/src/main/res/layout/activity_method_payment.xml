<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dise_o_final_selecci_n_m_todo_de_pago">

    <ImageButton
        android:id="@+id/btnTarjeta"
        android:layout_width="307dp"
        android:layout_height="180dp"
        android:background="@drawable/tarjeta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="112dp" />

    <ImageButton
        android:id="@+id/btnEfectivo"
        android:layout_width="308dp"
        android:layout_height="177dp"
        android:background="@drawable/efectivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="349dp" />

    <TextView
        android:id="@+id/textEfectivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Efectivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEfectivo"
        tools:layout_editor_absoluteX="180dp" />

</androidx.constraintlayout.widget.ConstraintLayout>