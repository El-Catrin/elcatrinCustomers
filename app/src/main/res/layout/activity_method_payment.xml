<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dise_o_final_selecci_n_m_todo_de_pago">

    <LinearLayout
        android:id="@+id/lycreditCard"
        android:layout_width="298dp"
        android:layout_height="186dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="62dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/lycashPayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnTarjeta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tarjeta" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lycashPayment"
        android:layout_width="305dp"
        android:layout_height="182dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="124dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lycreditCard">

        <ImageButton
            android:id="@+id/btnEfectivo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/efectivo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>