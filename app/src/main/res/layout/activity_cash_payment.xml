<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chkacpectarCambio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/undraw_pay_online_b1hk"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="20dp"
            tools:ignore="VectorDrawableCompat" />

        <View
            android:id="@+id/viewBienvenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_view_container"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textviewCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="225dp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Pago en Efectivo"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chkRTN"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="295dp"
            android:layout_marginEnd="30dp"
            android:text="¿Factura con RTN?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ffffff"/>

        <EditText
            android:hint="Ingrese RTN"
            android:paddingLeft="12dp"
            android:textColorHint="#B2B1B9"
            android:background="@drawable/bg_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/TextRTN"
            tools:ignore="InvalidId"
            android:visibility="invisible"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chkaceptarCambio"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="395dp"
            android:layout_marginEnd="30dp"
            android:text="¿Necesita Cambio?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#ffffff"/>

        <EditText
            android:hint="Ingrese Cambio"
            android:paddingLeft="12dp"
            android:textColorHint="#B2B1B9"
            android:background="@drawable/bg_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/editTextCambio"
            android:inputType="number"
            tools:ignore="InvalidId"
            android:visibility="invisible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_bottom_input"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCambio"
            tools:layout_editor_absoluteX="177dp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:background="@drawable/bg_bottom_navigation_bar"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation_bar"

        />

</androidx.constraintlayout.widget.ConstraintLayout>