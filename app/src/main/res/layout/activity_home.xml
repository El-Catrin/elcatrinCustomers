<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:background="@drawable/bg_white_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lyAuth">

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/undraw_gone_shopping_vwmc"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="20dp"
            tools:ignore="ContentDescription,VectorDrawableCompat" />

        <View
            android:id="@+id/viewBienvenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_view_container"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/textviewServicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="235dp"
        android:fontFamily="sans-serif"
        android:text="Rubros"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textviewRastrear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:text="Â¡Encuentra lo que quieres!"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/belleza"
                android:id="@+id/img_btn_belleza"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/entretenimiento"
                android:id="@+id/img_btn_entretenimiento"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/farmacia"
                android:id="@+id/img_btn_farmacia"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ferreteria"
                android:id="@+id/img_btn_ferreteria"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/mascotas"
                android:id="@+id/img_btn_empresas"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/panaderias"
                android:id="@+id/img_btn_panaderias"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/restaurantes"
                android:id="@+id/img_btn_restaurantes"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/supermercados"
                android:id="@+id/img_btn_supermercados"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/tecnologia"
                android:id="@+id/img_btn_tecnologia"
                android:scaleType="fitXY"
                android:background="@drawable/bg_bottoms_borders"
                android:contentDescription="TODO">

            </ImageButton>


        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textviewBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="450dp"
            android:fontFamily="sans-serif"
            android:text="Busca tus productos"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:hint="Ingrese producto"
            android:paddingLeft="12dp"
            android:textColorHint="#B2B1B9"
            android:background="@drawable/bg_input"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintTop_toBottomOf = "@+id/textviewReferencia"
            />

        <Button
            android:id="@+id/buttonBuscar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/bg_bottom_input"
            android:onClick="sendMessage6"
            android:text="Buscar"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textviewInicio"
            tools:ignore="OnClick" />

    </LinearLayout>






    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:background="@drawable/bg_bottom_navigation_bar"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation_bar"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>
